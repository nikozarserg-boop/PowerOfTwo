{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run ASM",
            "type": "shell",
            "command": "PowerShell",
            "args": [
                "-Command",
                "& 'C:\\Program Files\\NASM\\nasm' -f win64 '${file}' -o '${fileDirname}\\${fileBasenameNoExtension}.obj'; gcc '${fileDirname}\\${fileBasenameNoExtension}.obj' -lkernel32 -o '${fileDirname}\\${fileBasenameNoExtension}.exe'; & '${fileDirname}\\${fileBasenameNoExtension}.exe'"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "cwd": "${fileDirname}"
        },
